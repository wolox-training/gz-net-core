@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Create Movie";
}

<h4>Create movie</h4>

@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    <div class='form-group'>
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title)
    </div>

    <div class='form-group'>
        @Html.LabelFor(model => model.ReleaseDate, "Release Date")
        @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
    </div>

    <div class='form-group'>
        @Html.LabelFor(model => model.Genre)
        @Html.EditorFor(model => model.Genre)
    </div>

    <div class='form-group'>
        @Html.LabelFor(model => model.Price)
        @Html.EditorFor(model => model.Price)
    </div>

    <div class='form-group'>
        <input type="submit" value="Create" />
    </div>
}
